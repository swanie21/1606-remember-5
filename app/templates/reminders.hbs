<div class="reminders">
  <div class="reminders-list">
    {{#each model as |reminder|}}
      <h1>{{#link-to 'reminders.reminder' reminder.id class="spec-reminder-item"}}{{reminder.title}}{{/link-to}}</h1>
      <p class="reminder-date">{{reminder.date}}</p>
    {{/each}}
    {{#link-to 'reminders.new' class="add-new-button"}}<button type="'button'" class="add-reminder-button">Add Reminder</button>{{/link-to}}
  </div>
  <div class="sidebar">
    {{outlet}}
  </div>
</div>
