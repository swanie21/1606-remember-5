<div>
  <h2>New Reminder</h2>

  {{title}}

  <form class="add-reminder-form" {{action 'createReminder' on="submit"}}>
    <label>
      Title
      {{input value=title}}
    </label>
    <label>
      Date
      {{input type="date" value=date}}
    </label>
    <label>
      Notes
      {{textarea value=notes}}
    </label>
    <input type="submit" value="Submit">
  </form>

  {{outlet}}

</div>
